
<h1>Listing articles</h1>
  <% @articles.each do |article| %>
       <h3><%= link_to article.title, article_path(article) %></h3>
       <p><%= article.text %></p>
       <p><%= link_to 'Read more', article_path(article) %></p>
       <p><%= link_to 'Edit', edit_article_path(article) %></p>
       <p><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>


